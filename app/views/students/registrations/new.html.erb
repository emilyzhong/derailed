<%= devise_error_messages! %>
<div class="card modal-form login" style="display: block; top: 50%; margin: 0;">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h3> Student Sign Up </h3>
    <div class="field">
     <h6 class="field-title">name</h6>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
     <h6 class="field-title"> email</h6>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <h6 class="field-title"> password</h6>
      <% if @minimum_password_length %>
      <h6 class="field-caption">(<%= @minimum_password_length %> characters minimum)</h6>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <h6 class="field-title">confirm password</h6>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "students/shared/links" %>
</div>
